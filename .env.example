# Host HTTP port (host:container)
HOST_HTTP_PORT=8080

# DVWA security level: low | medium | high | impossible
DVWA_SECURITY=low

# Database (service name used in docker-compose)
DB_HOST=db
DB_PORT=3306
DB_NAME=dvwa
DB_USER=dvwa_user

# Change this in your local .env (do NOT push real secrets)
DB_PASS=changeme

# Optional DB root password (only if compose requires it)
MYSQL_ROOT_PASSWORD=rootchangeme

# Optional: phpMyAdmin port (if included)
PHPMYADMIN_PORT=8081

# TIMEZONE (optional)
# TIMEZONE=Europe/Madrid
